#:include middle\planStructure.kv 
#:include middle\rvt.kv


<TextInput>:
    background_color:0,0,0,1
    foreground_color :0.8,0.8,0.8,1
    canvas.after:
        Color:
            rgba: .1, .1, .1, 1
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height
       
    

<Button>:
    background_color:.2,.2,.2,1
    foreground_color :0.8,0.8,0.8,1
    text_size: self.size
    halign: 'center'
    valign: 'center'


<GUIGame>:

    font_name:"Roboto"

    b_savePlan:b_savePlan
    b_saveTemplate:b_saveTemplate
    b_loadPlan:b_loadPlan
    
    template_List:template_List
    plan_structure:plan_structure

    t_name:t_name
    t_location:t_location

    FloatLayout:
        size: root.width, root.height

        BoxLayout:
            orientation:"horizontal"
            cols:3
            size_hint: 1,0.05
            pos_hint:{"x":0.01,"top":0.99}

            Button:
                id:b_savePlan
                text:"save as Plan"
                margin_x:[10,10]
                on_press:root.savePlan()

            Button:
                id:b_saveTemplate
                text:"save as Template"
                margin_x:[10,10]
                on_press:root.saveTemplate()

            Button:
                id:b_loadPlan
                text:"load Plan"
                margin_x:[10,10]
                on_press:root.loadPlan()

            Label:
                text:"Location:"
                margin_x:[10,10]

            TextInput:
                id:t_location
                text:"E:\Program Files (x86)\Microsoft Visual Studio\2019\Community\Common7\IDE\1031"
                multiline:False

            Label:
                text:"Filename:"
                margin_x:[10,10]

            TextInput:
                id:t_name
                text:"Leaving application in progress" 
                multiline:False


        FloatLayout:
            size_hint: 1,0.85
            pos_hint:{"x":0,"top":0.95,"y":0.06}

            RV_Templates:
                id:template_List
                pos_hint:{"x":0,"top":1}
                size_hint: 0.2,1

            PlanStructureWidget:
                id:plan_structure
                pos_hint:{"x":0.2,"top":1}
                size_hint: 0.8,1
        
        Button:
            text:"update"
            pos_hint:{"x":0.2,"top":0.05,"right":0.8}
            size_hint: 0.6,0.04
            on_press: plan_structure.plan_update()
            halign: 'center'
            valign: 'center'

