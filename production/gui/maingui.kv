#:include production\gui\middle\pop\popmenu.kv
#:include middle\planStructure.kv 
#:include middle\rvt.kv
<GUIGame>:

    b_newFile:b_newFile
    template_List:template_List
    plan_structure:plan_structure

    FloatLayout:
        orientation:"vertical"
        size: root.width, root.height

        BoxLayout:
            orientation:"horizontal"
            size_hint: 1,0.05
            pos_hint:{"x":0,"top":1}
            Button:
                id:b_newFile
                text:"new File"
                margin_x:[10,10]

        FloatLayout:
            orientation:"horizontal"
            size_hint: 1,0.9
            pos_hint:{"x":0,"top":0.95,"y":0.05}

            RV_Templates:
                id:template_List
                pos_hint:{"x":0,"top":1}
                size_hint: 0.2,1

            PlanStructureWidget:
                id:plan_structure
                pos_hint:{"x":0.2,"top":1}
                size_hint: 0.8,1

        BoxLayout:
            orientation:"horizontal"
            size_hint:1,0.05
            ps:0,0
            Label:
                text:"space"