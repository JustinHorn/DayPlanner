#:include middle/planner.kv 
#:include middle/rvt.kv


<TextInput>:
    background_color:0,0,0,1
    foreground_color :0.8,0.8,0.8,1
    canvas.after:
        Color:
            rgba: .1, .1, .1, 1
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height
       
    

<Button>:
    background_color:.2,.2,.2,1
    foreground_color :0.8,0.8,0.8,1
    halign: 'center'
    valign: 'center'


<DayPlannerGUI>:

    font_name:"Roboto"

    b_save:b_save
    b_load:b_load
    
    template_list:template_list
    planner:planner

    t_name:t_name
    t_location:t_location

    FloatLayout:
        size: root.width, root.height

        BoxLayout:
            orientation:"horizontal"
            cols:3
            size_hint: 1,0.05
            pos_hint:{"x":0,"top":0.99}

            Button:
                id:b_save
                text:"save plan"
                on_press:root.savePlan()

            Button:
                id:b_load
                text:"load plan"
                on_press:root.loadPlan()

            Label:
                text:"Location:"

            TextInput:
                id:t_location
                text:""
                multiline:False

            Label:
                text:"Filename:"

            TextInput:
                id:t_name
                text:"Leaving application in progress" 
                multiline:False


        FloatLayout:
            size_hint: 1,0.9
            pos_hint:{"x":0,"top":0.925}

            RV_Templates:
                id:template_list
                pos_hint:{"x":0,"top":1}
                size_hint: 0.2,1

            Planner:
                id:planner
                pos_hint:{"x":0.2,"top":1}
                size_hint: 0.8,1