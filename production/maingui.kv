#:kivy 1.11
#:include popmenu.kv
<TextInput>:
    background_color:0,0,0,1
    foreground_color :0.8,0.8,0.8,1
    canvas.after:
        Color:
            rgba: .1, .1, .1, 1
        Line:
            width: 1
            rectangle: self.x, self.y, self.width, self.height
       
<Button>:
    background_color:.2,.2,.2,1
    foreground_color :0.8,0.8,0.8,1
    halign: 'center'
    valign: 'center'

<RecycleBoxLayout>:
    default_size: None, dp(40)
    default_size_hint: 1, None
    size_hint_y: None
    height: self.minimum_height
    orientation: 'vertical'
    background_color: [1.0,0,0,1]

<DayPlannerGUI>:

    font_name:"Roboto"

    b_save:b_save
    b_load:b_load
    b_mode:b_mode
    t_theme:t_theme
    rv_temp:rv_temp
    t_plan:t_plan
    rv_entries:rv_entries

    FloatLayout:
        size: root.width, root.height

        BoxLayout:
            orientation:"horizontal"
            cols:3
            size_hint: 1,0.05
            pos_hint:{"x":0,"top":0.99}

            Button:
                id:b_save
                text:"save plan"
                on_press:root.savePlan()

            Button:
                id:b_load
                text:"load plan"
                on_press:root.loadPlan()


        FloatLayout:
            size_hint: 1,0.9
            pos_hint:{"x":0,"top":0.925}


            Label:
                size_hint: 0.2,0.05
                text:"Templates:"
                pos_hint:{'x':0.01,"top":1}
                halign: 'left'
                valign: 'bottom'

            RecycleView:
                id:rv_temp
                size_hint: 0.2,0.95
                pos_hint:{'x':0,"top":0.95}
                viewclass: 'Button'
                RecycleBoxLayout:

            TextInput:
                id:t_theme
                text:"Plan"
                pos_hint:{"x":0.2,"top":1}
                size_hint:0.6,0.05
                halign: 'left'
                valign: 'bottom'
                multiline:False
                on_text: root.updateTheme(self.text)
            
            Button:
                id:b_mode
                text:"P/T"
                pos_hint:{"x":0.7,"top":1}
                size_hint:0.1,0.05
                on_press: root.changeMode()

            TextInput:
                id:t_plan
                on_text: root.update()
                pos_hint:{"x":0.2,"top":0.95}
                size_hint: 0.6,0.95

            Label:
                size_hint: 0.2,0.05
                text:"Structure:"
                pos_hint:{'x':0.8,"top":1}
                halign: 'left'
                valign: 'bottom'

            RecycleView:
                id:rv_entries
                size_hint: 0.2,0.95
                pos_hint:{'x':0.8,"top":0.95}
                viewclass: 'Button'
                RecycleBoxLayout:
               